{
  "name": "scoreboard-design",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "Scoreboard Design",
  "description": "Editeur visuel de scoreboards pour retransmissions de hockey sur glace",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest",
    "test:run": "vitest run",
    "electron:dev": "vite & sleep 3 && electron .",
    "electron:build": "npm run build && electron-builder --config electron-builder.config.cjs",
    "electron:build:win": "npm run build && electron-builder --config electron-builder.config.cjs --win",
    "electron:build:mac": "npm run build && electron-builder --config electron-builder.config.cjs --mac",
    "electron:build:linux": "npm run build && electron-builder --config electron-builder.config.cjs --linux"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dexie": "^4.3.0",
    "exceljs": "^4.4.0",
    "gif.js": "^0.2.0",
    "html-to-image": "^1.11.13",
    "immer": "^11.1.4",
    "lucide-react": "^0.564.0",
    "papaparse": "^5.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.2.0",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
